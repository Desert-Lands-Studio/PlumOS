PlumOS
├── build/                   # Сборочные скрипты и временные файлы сборки
├── docs/                    # Документация
│   ├── architecture/        # Документы по архитектуре ОС
│   ├── dev-guides/          # Руководства для разработчиков
│   ├── user-guides/         # Руководства для пользователей
│   └── specs/               # Спецификации (например, API, ABI, файловая система)
├── src/                     # Исходный код системы
│   ├── bin/                 # Пользовательские утилиты
│   ├── crypto/              # Криптографические библиотеки (heimdal, openssh, openssl)
│   ├── include/             # Заголовочные файлы (глобальные)
│   ├── kernel/              # Исходный код ядра
│   │   ├── arch/            # Архитектурно-зависимый код (например, arm64, x86_64)
│   │   ├── drivers/         # Драйверы устройств
│   │   ├── mm/              # Управление памятью
│   │   ├── sched/           # Планировщик задач
│   │   ├── syscalls/        # Реализация системных вызовов
│   │   ├── fs/              # Файловая система
│   │   └── ipc/             # Межпроцессное взаимодействие
│   ├── lib/                 # Общие библиотеки
│   │   ├── libc/            # Реализация стандартной библиотеки C
│   │   ├── libm/            # Математическая библиотека
│   │   └── libutil/         # Вспомогательные утилиты
│   ├── sbin/                # Системные утилиты (например, init, mount)
│   ├── sys/                 # Общие системные файлы (например, конфигурация ядра)
│   ├── tools/               # Вспомогательные инструменты для работы с ОС (например, анализаторы, сборщики)
│   ├── tests/               # Тесты (юнит-тесты, интеграционные тесты)
│   └── usr/                 # Пользовательский уровень (например, дополнительные утилиты)
│       ├── bin/           # Игры или демонстрационные программы
│       ├── sbin/ 
│       ├── games/ 
│       └── local/           # Местные (пользовательские) программы
XAPI/
└── docs/                      # Документация
    ├── protocols/             # Описание протоколов (аналог X11/Wayland)
    ├── architecture/          # Архитектура XAPI
    └── developer_guides/      # Руководства по использованию XAPI