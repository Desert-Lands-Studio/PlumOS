{
    "version": 8,
    "configurePresets": [
        {
            "name": "Clang 19.1.0 x86_64-pc-windows-msvc",
            "displayName": "Clang_comp",
            "description": "Using compilers: C = C:\\application\\LLVM\\bin\\clang.exe, CXX = C:\\application\\LLVM\\bin\\clang++.exe",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "C:/application/LLVM/bin/clang.exe",
                "CMAKE_CXX_COMPILER": "C:/application/LLVM/bin/clang++.exe",
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "Ninja Build",
            "displayName": "Ninja Build",
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            }
        }
    ]
}